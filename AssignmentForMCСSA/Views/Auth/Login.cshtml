@model AssignmentForMCСSA.Data.Models.Dto.LoginDto
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-8 col-lg-6">
            <h1 class="h3 mb-3 fw-normal text-md-center">
                @_localization.GetKey("PleaseSignIn")
            </h1>
            <h4 class="text-danger text-md-center">@ViewData["Title"]</h4>
            <form 
                method="post"
                action="Login"
                class="mt-1"
            >
                <div class="form-floating">
                    <input
                        asp-for="Login"
                        type="text" 
                        class="form-control" 
                    >
                    <label>
                        @_localization.GetKey("Login")
                    </label>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                
                <div class="form-floating">
                    <input
                        asp-for="Password"
                        type="password" 
                        class="form-control mt-2" 
                    >
                    <label>
                        @_localization.GetKey("Password")
                    </label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                @*<div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>*@
                <button 
                    class="w-100 btn btn-primary mt-2" 
                    type="submit"
                >
                    @_localization.GetKey("SignIn")
                </button>
                <div class="text-center mt-2">
                    <p>
                        @_localization.GetKey("Don'tYouHaveAnAccount")
                        <a href="/Account/Registration">
                            @_localization.GetKey("SignUp")
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>