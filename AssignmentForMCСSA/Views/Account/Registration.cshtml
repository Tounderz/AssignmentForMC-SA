@model AssignmentForMCСSA.Data.Models.Dto.RegistrationDto

@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-8 col-lg-6">
            <h1 class="h3 mb-3 fw-normal text-md-center">
                @_localization.GetKey("PleaseSignUp")
            </h1>
            <form 
                enctype="multipart/form-data"
                method="post" 
                action="Registration" 
                class="mt-1"
            >
                <div class="form-floating mt-1">
                    <input 
                        asp-for="FirstName"
                        type="text" 
                        class="form-control"
                    >
                    <label>
                        @_localization.GetKey("FirstName")
                    </label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mt-1">
                    <input 
                        asp-for="LastName"
                        type="text"
                        class="form-control"
                    >
                    <label>
                        @_localization.GetKey("LastName")
                    </label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mt-1">
                    <input 
                        asp-for="Email"
                        type="email"
                        class="form-control"
                    >
                    <label>
                        @_localization.GetKey("Email")
                    </label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form mt-1">
                    <input 
                        asp-for="Img"
                        type="file"
                        class="form-control"
                    >
                </div>
                <div class="form-floating mt-1">
                    <input
                        asp-for="Login"
                        type="text"
                        class="form-control"
                    >
                    <label>
                        @_localization.GetKey("Login")
                    </label>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-floating mt-1">
                    <input
                        asp-for="Password"
                        type="password" 
                        class="form-control"
                    >
                    <label>
                        @_localization.GetKey("Password")
                    </label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating mt-1">
                    <input 
                        asp-for="PasswordConfirm"
                        type="password"
                        class="form-control"
                    >
                    <label>
                        @_localization.GetKey("PasswordConfirm")
                    </label>
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <button 
                    class="w-100 btn btn-primary mt-2" 
                    type="submit"
                >
                    @_localization.GetKey("SignUp")
                </button>
                <div class="text-center mt-2">
                    <p>
                        @_localization.GetKey("HaveAlreadyAnAccount")
                        <a href="/Auth/Login">
                            @_localization.GetKey("SignIn")
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>