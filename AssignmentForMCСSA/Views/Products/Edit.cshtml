@model AssignmentForMCСSA.Data.Models.Dto.ProductDto
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-6">
            <h1>
                @_localization.GetKey("EditProduct")
            </h1>
            <form enctype="multipart/form-data" method="post" action="Edit" class="mt-5">
                <div class="form-floating mt-2">
                    <input 
                        type="number" 
                        class="form-control" 
                        asp-for="Id" 
                        readonly
                    >
                    <label>
                        Id
                    </label>
                </div>
                <div class="form-floating mt-2">
                    <input type="text" class="form-control" asp-for="Title">
                    <label>
                        @_localization.GetKey("Title")
                    </label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input type="number" class="form-control" asp-for="Price">
                    <label>
                        @_localization.GetKey("Price")
                    </label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input type="text" class="form-control" asp-for="Category">
                    <label>
                        @_localization.GetKey("Category")
                    </label>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input type="text" class="form-control" asp-for="Description">
                    <label>
                        @_localization.GetKey("Description")
                    </label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input type="file" class="form-control" asp-for="Image">
                    <label>
                        @_localization.GetKey("Image")
                    </label>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <hr />
                <button type="submit" style="width: 10rem; border-radius: 10px" class="btn btn-outline-primary">
                    @_localization.GetKey("Edit")
                </button>
            </form>
        </div>
    </div>
</div>